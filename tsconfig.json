{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
			"@/src": ["src/*"],
			"@/hooks/*": ["src/hooks/*"],
			"@/utils/*": ["src/utils/*"],
			"@/configs/*": ["src/configs/*"],
			"@/components/*": ["src/components/*"],
			"@/constants/*": ["src/constants/*"],
			"@/styles/*": ["styles/*"]
		}
  },
  "include": ["./jest.setup.js","next-env.d.ts", "**/*.ts", "**/*.tsx","**/*.mdx"],
  "exclude": ["node_modules"]
}
